# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# JavaScript/React files
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf

# Batch files (keep Windows line endings)
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pkl binary
*.pth binary
